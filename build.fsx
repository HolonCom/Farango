// --------------------------------------------------------------------------------------
// FAKE build script
// --------------------------------------------------------------------------------------

#r "./packages/FAKE/tools/FakeLib.dll"

open Fake

// --------------------------------------------------------------------------------------
// Build variables
// --------------------------------------------------------------------------------------

let buildDir  = "./build/"

// --------------------------------------------------------------------------------------
// Targets
// --------------------------------------------------------------------------------------

Target "Clean" (fun _ ->
  CleanDir buildDir
)

Target "Build" (fun _ ->
  !! "**/Farango.fsproj"
  |> MSBuildReleaseExt buildDir [("Verbosity", "Quiet")] "Build"
  |> ignore
)

// --------------------------------------------------------------------------------------
// Build order
// --------------------------------------------------------------------------------------

"Clean"
  ==> "Build"

RunTargetOrDefault "Build"